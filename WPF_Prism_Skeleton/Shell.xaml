<metro:MetroWindow x:Class="WPF_Prism_Skeleton.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Prism_Skeleton"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:inf="clr-namespace:WPF_Prism_Skeleton;assembly=WPF_Prism_Skeleton"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="WPF Prism Skeleton" Height="500" Width="600" TitleCaps="False">
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" prism:RegionManager.RegionName="{x:Static inf:RegionNames.ToolbarRegion}" Margin="5" />
        <ContentControl prism:RegionManager.RegionName="{x:Static inf:RegionNames.ContentRegion}" Margin="5"  />
    </DockPanel>
</metro:MetroWindow>
